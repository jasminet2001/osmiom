<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#122D4E"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/locbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="84dp"
        android:backgroundTint="#3B7B9A"
        android:contentDescription="my location"
        app:layout_constraintEnd_toStartOf="@+id/loc"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

    <TextView
        android:id="@+id/cell_id_text_view"
        android:layout_width="116dp"
        android:layout_height="36dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="16dp"
        android:background="#3B7B9A"
        android:text="Cell ID: "
        android:textColor="#70AFCE"
        android:textColorHighlight="#70AFCE"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:text="Location"
        app:layout_constraintEnd_toStartOf="@+id/pow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pow"
        android:layout_width="166dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="28dp"
        android:text="Power"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="191dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        android:text="Answer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/measurement_count"
        android:layout_width="217dp"
        android:layout_height="73dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:text="Measurement Count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer" />

    <TextView
        android:id="@+id/eventTimeText"
        android:layout_width="160dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pow" />

    <TextView
        android:id="@+id/cellTechText"
        android:layout_width="101dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="256dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
